<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PapyrusLogMonitor.ViewModels"
        xmlns:views="using:PapyrusLogMonitor.Views"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
        x:Class="PapyrusLogMonitor.Views.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="600"
        Height="700"
        MinWidth="500"
        MinHeight="600"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    
    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <Grid>
        <!-- Settings Content -->
        <views:SettingsView />
        
        <!-- Window Close Button -->
        <Button Command="{Binding $parent[Window].DataContext.CloseSettingsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Width="30"
                Height="30"
                Background="Transparent"
                BorderThickness="0"
                ToolTip.Tip="Close Settings">
            <TextBlock Text="âœ•" FontSize="16" />
        </Button>
    </Grid>
</Window>