<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:PapyrusMonitor.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:PapyrusMonitor.Avalonia.Views"
        xmlns:pviews="clr-namespace:PapyrusLogMonitor.Views;assembly=PapyrusLogMonitor"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="PapyrusMonitor.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Papyrus Log Monitor"
        Width="600"
        Height="500"
        MinWidth="450"
        MinHeight="400"
        WindowStartupLocation="CenterScreen">
        
        <Design.DataContext>
                <vm:MainWindowViewModel />
        </Design.DataContext>
        
        <Panel>
                <!-- Main Content -->
                <views:PapyrusMonitorView DataContext="{Binding PapyrusMonitorViewModel}" />
                
                <!-- Settings Overlay -->
                <Border Background="#80000000"
                        IsVisible="{Binding ShowSettings}"
                        IsHitTestVisible="{Binding ShowSettings}">
                        <Border Background="{DynamicResource SystemRegionBackgroundBrush}"
                                CornerRadius="8"
                                Width="620"
                                Height="720"
                                MaxWidth="800"
                                MaxHeight="800"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BoxShadow="0 8 32 0 #40000000">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Settings Header -->
                                        <Border Grid.Row="0" 
                                                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                                CornerRadius="8,8,0,0"
                                                Padding="20,15">
                                                <Grid>
                                                        <TextBlock Text="Settings" 
                                                                   FontSize="20" 
                                                                   FontWeight="SemiBold"
                                                                   HorizontalAlignment="Left"/>
                                                        <Button Command="{Binding CloseSettingsCommand}"
                                                                HorizontalAlignment="Right"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                Padding="8">
                                                                <TextBlock Text="âœ•" FontSize="16" />
                                                        </Button>
                                                </Grid>
                                        </Border>
                                        
                                        <!-- Settings Content -->
                                        <pviews:SettingsView Grid.Row="1"
                                                             DataContext="{Binding SettingsViewModel}" />
                                </Grid>
                        </Border>
                </Border>
        </Panel>
</Window>
